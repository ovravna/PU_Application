<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PU_Application.View.MainTabPageiOS"
             xmlns:pages="clr-namespace:PU_Application.View;assembly=PU_Application">
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_feed.png"
      Title="Browse">
    <x:Arguments>
      <pages:BrowseItemsPage/>
    </x:Arguments>
  </NavigationPage>
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_feed.png"
      Title="My Items">
    <x:Arguments>
      <pages:MyItemsPage/>
    </x:Arguments>
  </NavigationPage>
  <NavigationPage
      BarBackgroundColor="{DynamicResource Primary}"
      BarTextColor="White"
      Icon="tab_about.png"
      Title="Calender">
    <x:Arguments>
      <pages:CalenderPage/>
    </x:Arguments>
  </NavigationPage>
</TabbedPage>